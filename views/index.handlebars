<div id="introText">
    <p>EAT THE BURGER</p>
</div>

<img id="introBurger" src="https://natashaskitchen.com/wp-content/uploads/2019/04/Best-Burger-5-600x900.jpg">

<div id="mobileBurgerHolder">
    <img id="mobileBurger" src="https://natashaskitchen.com/wp-content/uploads/2019/04/Best-Burger-5-600x900.jpg">
</div>

<div id="inputForm">
    <p id="welcome">Welcome to Eat The Burger</p>

    <p>Type in a burger you want to eat and then click Add Burger!</p>
    <form class="create-form">
        <div class="form-group">
            <textarea rows="6" type="text" id="bu" name="name"></textarea>
        </div>
        <div style="text-align: center;">
        <button class="btn btn-dark" type="submit">Add Burger</button>
        </div>
    </form>
</div>

<hr>

<div class="container" id="burgerLog">
    <div class="row">
        <div class="col">
            <p class="burgersHeader">To Eat</p>
            <ul id="burgersAdded">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgerBlock devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <p class="burgersHeader">Devoured</p>
            <ul id="burgersDevoured" class="alert alert-secondary">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgerBlock devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>